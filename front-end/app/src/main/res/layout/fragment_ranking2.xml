<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ranking2Fragment"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/ranking2_all_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_basic"
            android:text="ALL"
            android:textSize="20dp"
            android:textColor="@color/text3"
            android:stateListAnimator="@null"
            />
        <View
            android:layout_marginTop="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/text1"
            android:layout_width="2dp"
            android:layout_height="16dp" />
        <Button
            android:id="@+id/ranking2_game_btn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_basic"
            android:text="game"
            android:textSize="20dp"
            android:textColor="@color/text1"
            android:stateListAnimator="@null"
            />
        <Spinner
            android:layout_marginTop="0dp"
            android:layout_marginLeft="115dp"
            android:id="@+id/ranking2_game_dropdown"
            android:layout_width="120dp"
            android:background="@drawable/spinner_custom"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="142dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textSize="18dp"
            android:textColor="@color/text6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginRight="3dp"
            android:text="PLAYER"
            android:textColor="@color/text6"
            android:textSize="18dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="22dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="35dp"
        android:id="@+id/ranking2_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>