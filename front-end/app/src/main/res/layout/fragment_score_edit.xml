<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreEditFragment"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/ScoreEdit_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW SCORE"
            android:textColor="@color/text3"
            android:textSize="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:text="GAME"
                android:textSize="32dp"
                android:textColor="@color/text1"/>
            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/scoreedit_game_dropdown1"
                android:layout_width="290dp"
                android:background="@drawable/spinner_custom"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <View
            android:layout_marginLeft="98dp"
            android:layout_width="245dp"
            android:layout_height="2dp"
            android:background="@color/text1"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLAYER"
                        android:textSize="30dp"
                        android:textColor="@color/text1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="30dp"
                        android:textColor="@color/text5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLAYER"
                        android:textSize="30dp"
                        android:textColor="@color/text1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="30dp"
                        android:textColor="@color/text4"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_marginTop="0dp"
                    android:id="@+id/scoreedit_player1_name"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:background="@drawable/spinner_custom"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown" />
                <Spinner
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/scoreedit_player2_name"
                    android:layout_width="110dp"
                    android:gravity="center"
                    android:background="@drawable/spinner_custom"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:background="@color/text1"/>
                <View
                    android:layout_marginLeft="54dp"
                    android:layout_width="110dp"
                    android:layout_height="2dp"
                    android:background="@color/text1"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/scoreedit_player1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="00"
                    android:textColorHint="@color/text5"
                    android:textSize="44dp"
                    android:inputType="text"
                    android:background="@null"
                    android:textColor="@color/text5" />
                <TextView
                    android:layout_marginLeft="59dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/text1"
                    android:textSize="44dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginLeft="59dp"
                    android:id="@+id/scoreedit_player2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="00"
                    android:textColorHint="@color/text4"
                    android:textSize="44dp"
                    android:inputType="text"
                    android:background="@null"
                    android:textColor="@color/text4" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/add_new_score_btn"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD NEW SCORE"
                android:textColor="@color/text2"
                android:textSize="32dp"
                android:background="@drawable/button_background"
                android:stateListAnimator="@null"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE SCORE"
            android:textColor="@color/text3"
            android:textSize="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:baselineAligned="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:text="GAME"
                android:textSize="32dp"
                android:textColor="@color/text1"/>
            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/scoreedit_game_dropdown2"
                android:layout_width="290dp"
                android:background="@drawable/spinner_custom"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <View
            android:layout_marginLeft="98dp"
            android:layout_width="245dp"
            android:layout_height="2dp"
            android:background="@color/text1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="DATE"
                android:textSize="32dp"
                android:textColor="@color/text1"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/scoreedit_date_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="12"
                android:textColorHint="@color/text1"
                android:textSize="32dp"
                android:inputType="text"
                android:background="@null"
                android:textColor="@color/text5" />
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/text1"
                android:textSize="32dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginLeft="8dp"
                android:id="@+id/scoreedit_date_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="00"
                android:textColorHint="@color/text1"
                android:textSize="32dp"
                android:inputType="text"
                android:background="@null"
                android:textColor="@color/text4" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Spinner
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/scoreedit_scorelist_dropdown"
                android:layout_width="368dp"
                android:background="@drawable/spinner_custom"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View
                android:layout_marginRight="37dp"
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:background="@color/text1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/delete_score_btn"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE SCORE"
                android:textColor="@color/text2"
                android:textSize="32dp"
                android:background="@drawable/button_background"
                android:stateListAnimator="@null"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>